-- Services
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")

local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- Remote
local Clicked = ReplicatedStorage.Remotes.Clicked -- RemoteEvent

-- Optional helper function for cleaner code
local function fire(remoteName, waitTime)
    Clicked:FireServer(remoteName, true)
    if waitTime then
        task.wait(waitTime)
    end
end

