-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AutoGUI"
screenGui.Parent = playerGui

-- Frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 200)
frame.Position = UDim2.new(0, 20, 0, 20)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Cultivate Button
local cultivateBtn = Instance.new("TextButton")
cultivateBtn.Size = UDim2.new(1, -20, 0, 50)
cultivateBtn.Position = UDim2.new(0, 10, 0, 10)
cultivateBtn.Text = "Cultivate"
cultivateBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
cultivateBtn.TextColor3 = Color3.new(1,1,1)
cultivateBtn.Parent = frame

-- Breakthrough Button
local breakthroughBtn = Instance.new("TextButton")
breakthroughBtn.Size = UDim2.new(1, -20, 0, 50)
breakthroughBtn.Position = UDim2.new(0, 10, 0, 70)
breakthroughBtn.Text = "Breakthrough (OFF)"
breakthroughBtn.BackgroundColor3 = Color3.fromRGB(170, 0, 0)
breakthroughBtn.TextColor3 = Color3.new(1,1,1)
breakthroughBtn.Parent = frame

-- Close GUI Button
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(1, -20, 0, 50)
closeBtn.Position = UDim2.new(0, 10, 0, 130)
closeBtn.Text = "Close GUI"
closeBtn.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Parent = frame

-- State for Breakthrough loop
local breakthroughLooping = false

-- Cultivate action (fires once)
cultivateBtn.MouseButton1Click:Connect(function()
    Clicked:FireServer("Cultivate", false)
end)

-- Breakthrough toggle (loop until stopped)
breakthroughBtn.MouseButton1Click:Connect(function()
    breakthroughLooping = not breakthroughLooping
    breakthroughBtn.Text = breakthroughLooping and "Breakthrough (ON)" or "Breakthrough (OFF)"
    
    if breakthroughLooping then
        spawn(function()
            while breakthroughLooping do
                Clicked:FireServer("Breakthrough", false)
                task.wait(0.5) -- adjust loop speed if needed
            end
        end)
    end
end)

-- Close GUI functionality
closeBtn.MouseButton1Click:Connect(function()
    screenGui.Enabled = false
end)
